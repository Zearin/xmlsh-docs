<?xml version="1.0" encoding="UTF-8"?>
<refentry
	xmlns	="http://docbook.org/ns/docbook"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xl="http://www.w3.org/1999/xlink"
	
	version	="5.0"
	label	="rngconvert" 
	role	="core"
>
	<refmeta>
		<refentrytitle>
			<command>rngconvert</command>
		</refentrytitle>
		<manvolnum>1</manvolnum>
	</refmeta>

	<refnamediv>
		<refname>
		    <command>rngconvert</command>
		</refname>
		<refpurpose>Convert RNG schemas to (and from) other schema formats</refpurpose>
	</refnamediv>


	<refsynopsisdiv>
		<cmdsynopsis>
			<command>rngconvert</command>
			
		    <arg choice="opt">
			    <synopfragmentref linkend="options">OPTIONS</synopfragmentref>
			</arg>
		    
		    <sbr/>
		    
		    <arg choice="req"><replaceable>INPUT_FILE</replaceable></arg>
		    <arg choice="req"><replaceable>OUTPUT_FILE</replaceable></arg>
		    
		    <sbr/>
		    
		    <synopfragment xml:id="options" xreflabel="OPTIONS">
		        
		        <arg rep="repeat">-i <replaceable>INPUT_OPTION</replaceable></arg>
		        <arg rep="repeat">-o <replaceable>OUTPUT_OPTION</replaceable></arg>
		        
		        <arg><sbr/>
		            -I 
		            <group choice="req">
                        <arg choice="plain">rng</arg>
                        <arg choice="plain">rnc</arg>
                        <arg choice="plain">dtd</arg>
                        <arg choice="plain">xml</arg>
                    </group>
		            <sbr/>
		        </arg>
		        
		        <arg>-O <group choice="req">
		            <arg choice="plain">rng</arg>
		            <arg choice="plain">rnc</arg>
		            <arg choice="plain">dtd</arg>
		            <arg choice="plain">xsd</arg>
		          </group><sbr/>
		        </arg>
		        
		        <arg>-C <arg choice="plain"><replaceable>CATALOG_URI</replaceable></arg></arg>
		    </synopfragment>
		    
		</cmdsynopsis>
	</refsynopsisdiv>
    
    <refsection>
        <title>Return Value</title>
        <para>Returns <returnvalue>0</returnvalue> if the command executed successfully, <returnvalue>1</returnvalue> if there was an error.</para>
    </refsection>

	<refsection>
		<title>See Also</title>
		<para>
			<uri>http://www.xmlsh.org/CommandRngconvert</uri>
		</para>
	</refsection>
</refentry>

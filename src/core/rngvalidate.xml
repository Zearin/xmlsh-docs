<?xml version="1.0" encoding="UTF-8"?>
<refentry
	xmlns	="http://docbook.org/ns/docbook"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xl="http://www.w3.org/1999/xlink"
	
	version	="5.0"
	label	="rngvalidate" 
	role	="core"
>
	<refmeta>
		<refentrytitle>
			<command>rngvalidate</command>
		</refentrytitle>
		<manvolnum>1</manvolnum>
	</refmeta>

	<refnamediv>
		<refname>
		    <command>rngvalidate</command>
		</refname>
		<refpurpose>Validate against an RNG schema</refpurpose>
	</refnamediv>


	<refsynopsisdiv>
		<cmdsynopsis>
			<command>rngvalidate</command>
			
		    <arg>
			    <synopfragmentref linkend="OPTIONS">OPTIONS</synopfragmentref>
			</arg>
		    
		    <sbr/>
		    
		    <arg choice="req"><replaceable>SCHEMA</replaceable></arg>
		    <arg choice="req" rep="repeat">FILE</arg>
		    
		    <sbr/>
		    
		    <synopfragment xml:id="OPTIONS">   
		        <arg>-i</arg>
		        <arg>-c</arg>
		        <arg>-d</arg>
		        <arg>-t</arg>
		        <arg>-e <arg choice="req"><replaceable>ENCODING</replaceable></arg></arg>
		        <arg>-f</arg>
		        <arg>-s</arg>
		        <arg>-p</arg>
		    </synopfragment>
		</cmdsynopsis>
	</refsynopsisdiv>
    
    <refsection>
        <title>Return Value</title>
        <para>Returns <returnvalue>0</returnvalue> if the command executed successfully, <returnvalue>1</returnvalue> if there was an error.</para>
    </refsection>

	<refsection>
		<title>See Also</title>
		<para>
			<uri>http://www.xmlsh.org/CommandRngvalidate</uri>
		</para>
	</refsection>
</refentry>

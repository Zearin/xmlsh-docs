<?xml version="1.0" encoding="UTF-8"?>
<refentry
	xmlns	="http://docbook.org/ns/docbook"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xl="http://www.w3.org/1999/xlink"
	
	version	="5.0"
	role="core"
	label="xls" 
>
	<refmeta>
		<refentrytitle>
			<command>xls</command>
		</refentrytitle>
		<manvolnum>1</manvolnum>
	</refmeta>

	<refnamediv>
		<refname>
		    <command>xls</command>
		</refname>
		<refpurpose>List files in a directory</refpurpose>
	</refnamediv>


	<refsynopsisdiv>
		<cmdsynopsis>
			<command>xls</command>
			
		    <group>
			    <arg choice="plain">-l</arg>
			    <arg choice="plain">-long</arg>
			</group>
		    
		    <group>
		        <arg choice="plain">-a</arg>
		        <arg choice="plain">-all</arg>
		    </group>
		    
		    <group>
		        <arg choice="plain">-R</arg>
		        <arg choice="plain">-recurse</arg>
		    </group>
		    
		    <arg choice="opt" rep="repeat"><replaceable>DIRECTORY OR FILE</replaceable></arg>
		</cmdsynopsis>
	</refsynopsisdiv>
    
    <refsection>
        <title>Return Value</title>
        <para>Returns <returnvalue>0</returnvalue> if the directory exists and is read successfully, otherwise <returnvalue>1</returnvalue>.</para>
    </refsection>

	<refsection>
		<title>See Also</title>
		<para>
			<uri>http://www.xmlsh.org/CommandXls</uri>
		</para>
	</refsection>
</refentry>

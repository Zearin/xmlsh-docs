<?xml version="1.0" encoding="UTF-8"?>
<refentry
	xmlns	="http://docbook.org/ns/docbook"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xl="http://www.w3.org/1999/xlink"
	
	version	="5.0"
	label	="xfile" 
	role	="core"
>
	<refmeta>
		<refentrytitle>
			<command>xfile</command>
		</refentrytitle>
		<manvolnum>1</manvolnum>
	</refmeta>

	<refnamediv>
		<refname>
		    <command>xfile</command>
		</refname>
		<refpurpose>File name manipulations</refpurpose>
	</refnamediv>

	<refsynopsisdiv>
		<cmdsynopsis>
			<command>xfile</command>
			
		    <arg>
		        <sbr/>
		        <synopfragmentref linkend="options">OPTIONS</synopfragmentref>
		        <sbr/>
		    </arg>
		    
		    <arg>
		        <replaceable>FILENAME</replaceable>
		        <arg><replaceable>BASE</replaceable></arg>
		    </arg>
		    
		    <synopfragment xml:id="options">
		        <group>
		            <arg choice="plain">-b</arg>
		            <arg choice="plain">-base</arg>
		        </group>
		        
		        <group>
		            <arg choice="plain">-B</arg>
		            <arg choice="plain">-basename</arg>
		        </group>
		        
		        <group>
		            <arg choice="plain">-n</arg>
		            <arg choice="plain">-name</arg>
		            <sbr/>
		        </group>
		        
		        <arg>-N</arg>
		        
		        <group>
		            <sbr/>
		            <arg choice="plain">-d</arg>
		            <arg choice="plain">-dir</arg>
		        </group>
		        
		        <group>
		            <arg choice="plain">-a</arg>
		            <arg choice="plain">-absolute</arg>
		        </group>
		        
		        <group>
		            <arg choice="plain">-c</arg>
		            <arg choice="plain">-canonical</arg>
		        </group>
		        
		        <group>
		            <arg choice="plain">-e</arg>
		            <arg choice="plain">-extension</arg>
		        </group>
		        
		        <group>
		            <arg choice="plain">-u</arg>
		            <arg choice="plain">-uri</arg>
		            <sbr/>
		        </group>
		        
		        <arg>-s</arg>
		    </synopfragment>
		    
		</cmdsynopsis>
	</refsynopsisdiv>
    
    <refsection>
        <title>Return Value</title>
        <para>Returns <returnvalue>0</returnvalue> if the command executed successfully, <returnvalue>1</returnvalue> if there was an error.</para>
    </refsection>

	<refsection>
		<title>See Also</title>
		<para>
			<uri>http://www.xmlsh.org/CommandXfile</uri>
		</para>
	</refsection>
</refentry>

<?xml version="1.0" encoding="UTF-8"?>
<refentry
	xmlns	="http://docbook.org/ns/docbook"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xl="http://www.w3.org/1999/xlink"
	
	version	="5.0"
	label	="xed" 
	role	="core"
>
	<refmeta>
		<refentrytitle>
			<command>xed</command>
		</refentrytitle>
		<manvolnum>1</manvolnum>
	</refmeta>

	<refnamediv>
		<refname><command>xed</command></refname>
		<refpurpose>XPath-based XML edit</refpurpose>
	</refnamediv>


	<refsynopsisdiv>
		<cmdsynopsis>
			<command>xed</command>
			
		    <arg>
			    <group>
			        <arg choice="plain">-i</arg>
			        <arg choice="plain">-input</arg>
			    </group>
			    <replaceable>INPUT</replaceable>
			</arg>
		    
		    <sbr/>
		    <arg>-n</arg>
		    <sbr/>
		    
		    <arg>
		        <group>
		            <arg choice="plain">-r</arg>
		            <arg choice="plain">-replace</arg>
		        </group>
		        <replaceable>EXPR</replaceable>
		    </arg>
		    
		    
		    <sbr/>
		    <arg>-d</arg>
		    <sbr/>
		    
		    <arg>
		        <group>
		            <arg choice="plain">-a</arg>
		            <arg choice="plain">-add</arg>
		        </group>
		        <replaceable>EXPR</replaceable>
		    </arg>
		    
		    <sbr/>
		    
		    <arg>
		        <group>
		            <arg choice="plain">-e</arg>
		            <arg choice="plain">-xpath</arg>
		        </group>
		        <replaceable>XPATH_EXPR</replaceable>
		    </arg>
		    
		    <sbr/>
		    
		    <arg>
		        <group>
		            <arg choice="plain">-m</arg>
		            <arg choice="plain">-matches</arg>
		        </group>
		        <replaceable>XSLT_MATCH_EXPR</replaceable>
		    </arg>
		    
		    <sbr/>
		    
		    <arg>
		        <group>
		            <arg choice="plain">-ren</arg>
		            <arg choice="plain">-rename</arg>
		        </group>
		        <replaceable>STRING</replaceable>
		    </arg>
		    
		    <sbr/>
		    
		    <arg>-v</arg>
		</cmdsynopsis>
	</refsynopsisdiv>
    
    <refsection>
        <title>Return Value</title>
        <para>Returns <returnvalue>0</returnvalue> if the command executed successfully, <returnvalue>1</returnvalue> if there was an error.</para>
    </refsection>

	<refsection>
		<title>See Also</title>
		<para>
			<uri>http://www.xmlsh.org/CommandXed</uri>
		</para>
	</refsection>
</refentry>
